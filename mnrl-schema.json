{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "mnrl-schema.json",
    "type": "object",
    "definitions": {
        "node" : {
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "type": {
                    "type": "string",
                    "enum": [
                        "state",
                        "hState",
                        "upCounter",
                        "boolean"
                    ]
                },
                "enable": {
                    "type": "string",
                    "enum": [ "onActivateIn", "onStartAndActivateIn", "onLast", "always" ]
                },
                "report": { "type": "boolean" },
                "inputDefs" : {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "portId": { "type": "string" },
                            "width": { "type": "number" }
                        }
                    }
                },
                "outputDefs" : {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "portId": { "type": "string" },
                            "width": { "type": "number" },
                            "activate": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id": { "type": "string" },
                                        "portId": { "type": "string" }
                                    }
                                }
                            }
                        }
                    }
                },
                "attributes": { "type": "object" }
            }
        }
    },
    "properties": {
        "id": { "type": "string" },
        "nodes": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/node"
            }
        }
    }
}